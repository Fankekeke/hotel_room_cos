<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cc.mrbird.febs.cos.dao.FoodInfoMapper">

    <!-- 分页获取公告信息 -->
    <select id="selectFoodPage" resultType="java.util.LinkedHashMap">
        select
        id,
        name,
        address,
        longitude,
        latitude,
        content,
        images,
        recommender,
        phone,
        create_date,
        del_flag
        from
        food_info
        where
        1 = 1
        <if test="foodInfo.name != null and foodInfo.name != ''">
            AND name LIKE CONCAT('%',#{foodInfo.name},'%')
        </if>
        <if test="foodInfo.address != null and foodInfo.address != ''">
            AND address LIKE CONCAT('%',#{foodInfo.address},'%')
        </if>
        order by
        create_date desc
    </select>
</mapper>
